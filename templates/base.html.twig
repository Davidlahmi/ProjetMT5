<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/FlatIcone.png')}}" type="image/x-icon">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
         <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
         <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
         <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
         <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
         <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>

<body>

<!-- Header ajouté ici -->
<header class="header py-3">
    <div class="container-fluid">
        <div class="row align-items-center RowNavbar">
            <!-- Image à gauche -->
            <div class="col-2 text-start">
                <a href="{{ path('app_home_page') }}">
                    <img src="{{ asset('assets/ImageRobo.png') }}" alt="Logo" class="img-fluid ImageRoboNavbar">
                </a>
            </div>
            <!-- Boutons au milieu -->
            <div class="col-8 text-center">
                <nav>
                    <a href="{{ path('app_home_page') }}" class="mx-2 BoutonNavbar LienDecoration">Accueil</a>
                    <a href="{{ path('app_experience_niveau') }}" class="mx-2 BoutonNavbar LienDecoration">Génération de CV</a>
                    <a href="{{path('app_blog')}}" class="mx-2 BoutonNavbar LienDecoration">Blog</a>
                    <a href="{{ path('app_contact') }}" class="mx-2 BoutonNavbar LienDecoration">Contact</a>
                    {% if not app.user %}
                        <a href="{{ path('app_register') }}" class="mx-2 BoutonNavbar LienDecoration">Inscription</a>
                    {% endif %}
                    {% if app.user %}
                        <a href="{{ path('app_mes_cv') }}" class="mx-2 BoutonNavbar LienDecoration">Mes CV</a>
                    {% endif %}
                </nav>
            </div>
            <!-- Image à droite -->
            <div class="col-2 text-end">
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="LienDecoration">
                        <img src="{{ asset('assets/compte2.png') }}" alt="Compte" class="img-fluid ImageCompteLogo">
                        <small class="PrenomUser">Déconnexion</small>
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}">
                        <img src="{{ asset('assets/compte.png') }}" alt="Compte" class="img-fluid ImageCompteLogo">
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</header>

  
{% block body %}
{% endblock %}

