{% extends 'base.html.twig' %}

{% block title %}CV en cours de création{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <style>
        .cv-item img.CvquatreDev {
            width: 100px;
            height: auto;
        }
        .cv-page-container {
            padding: 40px;
            text-align: center;
            font-family: 'Poppins', sans-serif;
            background-color: #f6eae1;
        }
        .section-title {
            font-size: 32px;
            color: #4989b8;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .cv-list {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 30px;
        }
        .cv-item {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            width: 200px;
            text-align: center;
        }
        .cv-item img {
            width: 100%;
            border-radius: 8px;
            margin-bottom: 10px;
        }
        .cv-item h3 {
            font-size: 18px;
            color: #333;
            margin-top: 10px;
        }
        .cv-item a {
            text-decoration: none;
            color: #4989b8;
            font-size: 14px;
        }
        .cv-item a:hover {
            text-decoration: underline;
        }
        .info-message {
            font-size: 18px;
            color: #333;
            margin-top: 40px;
        }
        .link-container {
            margin-top: 40px;
        }
        .link-container a {
            text-decoration: none;
            color: #4989b8;
            font-size: 18px;
            margin: 0 15px;
            font-weight: bold;
        }
        .link-container a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="cv-page-container">
        <h1 class="section-title">CV Générés</h1>
        
        <div class="cv-list">
            <div class="cv-item">
                <a href="/cv4dev">
                    <img class="CvquatreDev" src="{{ asset('assets/CvDeveloppeur/4.png') }}" alt="Miniature CV 1" />
                    <h3>Développeur Web Fin d'étude</h3>
                </a>
            </div>
            <div class="cv-item">
                <a href="/cv8comptable">
                    <img class="CvquatreDev" src="{{ asset('assets/CvComptable/8.png') }}" alt="Miniature CV 2" />
                    <h3>Comptable > 10 ans d'expérience</h3>
                </a>
            </div>
            <div class="cv-item">
                <a href="/cv2informaticien">
                    <img class="CvquatreDev" src="{{ asset('assets/CvInformaticien/2.png') }}" alt="Miniature CV 3" />
                    <h3>Informaticien 0-10 ans expérience</h3>
                </a>
            </div>
             <div class="cv-item">
                <a href="/cv1immobilier">
                    <img class="CvquatreDev" src="{{ asset('assets/CvImmobilier/1.png') }}" alt="Miniature CV 4" />
                    <h3>Immobilier 0-10 ans expérience</h3>
                </a>
            </div>
        </div>
        
        <div class="info-message">
            <p>Pour toute question, problème ou demande, veuillez consulter notre 
                <a href="/path-to-contact" style="color: #4989b8; font-weight: bold;">page de contact</a>.
            </p>
        </div>

        <h2 class="section-title" style="margin-top: 60px;">CV en cours de construction</h2>
        
        <div class="cv-list">
            <div class="cv-item">
                <a href="/cv1enfance">
                    <img class="CvquatreDev" src="{{ asset('assets/CvPetiteEnfance/1.png') }}" alt="CV en construction 1" />
                    <h3>Cv Petite enfance</h3>
                    <p style="color: #999; font-size: 14px;">En cours de construction...</p>
                </a>
            </div>
            <div class="cv-item">
                <a href="#">
                    <img class="CvquatreDev" src="{{ asset('assets/CvMarketing/1.png') }}" alt="CV en construction 2" />
                    <h3>Marketing 1</h3>
                    <p style="color: #999; font-size: 14px;">En cours de construction...</p>
                </a>
            </div>
            <div class="cv-item">
                <a href="#">
                    <img class="CvquatreDev" src="{{ asset('assets/CvAnalyste/1.png') }}" alt="CV en construction 3" />
                    <h3>Analyste 1</h3>
                    <p style="color: #999; font-size: 14px;">En cours de construction...</p>
                </a>
            </div>
            <div class="cv-item">
                <a href="/path-to-cv5">
                    <img class="CvquatreDev" src="{{ asset('assets/CvFleuriste/2.png') }}" alt="CV en construction 4" />
                    <h3>Fleuriste 2</h3>
                    <p style="color: #999; font-size: 14px;">En cours de construction...</p>
                </a>
            </div>
        </div>

        <div class="link-container">
            <a href="/path-to-create-new-cv">Générer un nouveau CV</a>
            <a href="/path-to-home">Retour à la page d'accueil</a>
        </div>
    </div>
{% endblock %}
